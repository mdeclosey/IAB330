<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IAB330assignment.SpecificItem">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
                <Image x:Name="product" Aspect="AspectFit" />
            </StackLayout>

            <StackLayout VerticalOptions = "StartAndExpand">
                <Label Text="Nike"/>
                <Label Text="50$"/>
                <Label Text="Category: Clothing"/>
                <Label Text="Location"/>
            </StackLayout>
            
            <Button Text="Edit"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>